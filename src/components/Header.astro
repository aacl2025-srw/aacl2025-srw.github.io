---
const links = [
  { href: "/", label: "Home" },
  { href: "/cfp", label: "Call for Papers" },
  { href: "/organizers", label: "Organizers" },
];
---
<header>
  <nav class="fixed top-0 w-full z-50 bg-white shadow">
    <div class="max-w-screen-md mx-auto px-4 py-4 flex justify-between items-center">
      <div class="text-xl font-bold">
        <a href="/">IJCNLP-AACL 2025 SRW</a>
      </div>
      <!-- Desktop menu -->
      <ul class="hidden md:flex space-x-6">
        {links.map(link => (
          <li><a href={link.href} class="text-gray-700 hover:text-blue-500">{link.label}</a></li>
        ))}
      </ul>
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="menu-button" class="text-gray-700 focus:outline-none text-2xl">
          â˜°
        </button>
      </div>
    </div>
    <!-- Mobile dropdown menu -->
    <div id="mobile-menu" class="hidden px-4 pb-4 md:hidden">
      {links.map(link => (
        <a href={link.href} class="block py-2 text-gray-700 hover:text-blue-500">{link.label}</a>
      ))}
    </div>
  </nav>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById('menu-button');
    const menu = document.getElementById('mobile-menu');
    btn?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  });
</script>
