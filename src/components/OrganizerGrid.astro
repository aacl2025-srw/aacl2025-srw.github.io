---
export interface Props {
  /** # of columns at medium breakpoint (1â€“6) */
  cols?: 1|2|3|4|5|6;
}
const { cols = 3 } = Astro.props;

const mdColsMap: Record<1|2|3|4|5|6,string> = {
  1: 'md:grid-cols-1',
